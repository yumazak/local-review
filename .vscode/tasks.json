// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"problemMatchers": [
		{
			"name": "ts-webpack-watch",
			"owner": "typescript",
			"applyTo": "closedDocuments",
			"fileLocation": [
				"relative",
				"${workspaceFolder}"
			],
			"pattern": "$ts-webpack",
			"background": {
				"activeOnStart": true,
				"beginsPattern": "webpack .*?(watch|watching|incremental|compile|compiling)",
				"endsPattern": "webpack .*?(compiled successfully|Compilation complete|compile successful|Finished)"
			}
		}
	],
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"type": "Live Preview",
			"workspacePath": "/Users/yumazak/dev/personal/local-review",
			"problemMatcher": [],
			"label": "Live Preview: サーバーを実行する"
		}
	]
}
