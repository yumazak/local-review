{
  "name": "diff-comment",
  "displayName": "Diff Comment",
  "description": "Add comments to diff editor lines and copy to clipboard",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yumazak/local-review"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:diff-comment.addComment",
    "onCommand:diff-comment.submitComments"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "diff-comment.addComment",
        "title": "Add Comment to Current Line",
        "category": "Diff Comment"
      },
      {
        "command": "diff-comment.submitComments",
        "title": "Copy All Comments",
        "category": "Diff Comment"
      }
    ],
    "keybindings": [
      {
        "command": "diff-comment.addComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "diff-comment.submitComments",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "diff-comment.addComment",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        },
        {
          "command": "diff-comment.submitComments",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "package:install": "pnpm run package:vsix && code --install-extension $(ls -t *.vsix | head -n 1)",
    "package:vsix": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "oxfmt src",
    "format:check": "oxfmt src --check",
    "prepare": "lefthook install",
    "test": "vscode-test",
    "test:unit": "pnpm run compile-tests && vscode-test --label unit",
    "test:all": "pnpm run compile-tests && vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "25.2.1",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "lefthook": "^2.0.13",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "typescript": "^5.9.3"
  }
}
