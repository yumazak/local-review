{
  "name": "diff-comment",
  "displayName": "Diff Comment",
  "description": "Add comments to diff editor lines and copy to clipboard",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yumazak/local-review"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:diff-comment.addComment",
    "onCommand:diff-comment.submitComments"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "diff-comment.addComment",
        "title": "Add Comment to Current Line",
        "category": "Diff Comment"
      },
      {
        "command": "diff-comment.submitComments",
        "title": "Copy All Comments",
        "category": "Diff Comment"
      }
    ],
    "keybindings": [
      {
        "command": "diff-comment.addComment",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "diff-comment.submitComments",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "diff-comment.addComment",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        },
        {
          "command": "diff-comment.submitComments",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package:install": "npm run package:vsix && code --install-extension $(ls -t *.vsix | head -n 1)",
    "package:vsix": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "prepare": "lefthook install",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "lefthook": "^2.0.13",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
